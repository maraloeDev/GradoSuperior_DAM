<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1.MainPage">
    

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            
            <Grid>
                
            <Label Text="Nombre:" HorizontalOptions="Start"></Label>
            </Grid>
                <Editor x:Name="editNombre" WidthRequest="500" HeightRequest="50" Placeholder="Nombre de usuario" HorizontalOptions="Start" MaxLength="10"></Editor>

            <Grid>

                <Label Text="Contraseña:" HorizontalOptions="Start"></Label>
            </Grid>
                <Editor WidthRequest="500" HeightRequest="50" Placeholder="Introduce una contraseña" HorizontalOptions="Start" MaxLength="16"></Editor>

            <Button Text="Iniciar sesión" Clicked="Button_Clicked" WidthRequest="500" HeightRequest="50" HorizontalOptions="Start"></Button>

            <Label x:Name="TextoErroneo"></Label>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
