<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/bEnviarTexto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar" />

    <Button
        android:id="@+id/bEnviarTexto2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar 2" />

    <Button
        android:id="@+id/bEnviarEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar e-mail" />

    <Button
        android:id="@+id/bllamar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Llamar" />

    <Button
        android:id="@+id/bLanzarWeb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LanzarWeb" />

    <Button
        android:id="@+id/bGoogleMaps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Button" />
</LinearLayout>